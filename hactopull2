command=""
started=False
while True:
   command=input(">").lower()
   if command=="start":
       if started:
           print("car is already started.")
       else:
            started=True:
           print("the car has started...")
   elif command=="stop":
       if not started:
           print("the car is already stopped.")
       else:
           started=False:
                print("the car stopped.")
   elif command=="help":
        print("""
 start-to start the car
 stop-to stop the car
 quit-to exit the game
                 """)
   elif command =="quit":
      break
else:
        print("sorry I don't understand")
